@model SportGearRental.ViewModels.Rentals.RentalDetailsViewModel
@{
    Layout = "_AdminLayout";
}

<h2>Delete Rental</h2>

<div>
    <h4>Are you sure you want to delete this rental?</h4>
    <dl class="row">
        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@Model.UserName</dd>
        <dt class="col-sm-2">Sport Gear</dt>
        <dd class="col-sm-10">@Model.SportGearName</dd>
        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.RentalStartDate.ToShortDateString()</dd>
        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.RentalEndDate.ToShortDateString()</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-area="Admin" asp-controller="Rental" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>