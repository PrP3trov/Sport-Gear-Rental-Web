@model SportGearRental.ViewModels.Rentals.RentalDetailsViewModel

@{
    ViewData["Title"] = "Delete Rental";
}

<h2>Delete Rental</h2>

<h4>Are you sure you want to delete this rental?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Sport Gear</dt>
        <dd class="col-sm-10">@Model.SportGearName</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
