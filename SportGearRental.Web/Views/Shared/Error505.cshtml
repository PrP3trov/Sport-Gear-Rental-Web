@using SportGearRental.ViewModels
@model ErrorViewModel
@{
    ViewData["Title"] = "Server Error";
}

<style>
    .error-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Arial', sans-serif;
        position: relative;
        overflow: hidden;
    }

        .error-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url("data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%23ffffff' fill-opacity='0.08' fill-rule='evenodd'%3E%3Cpath d='m0 40l40-40h-40v40zm40 0v-40h-40l40 40z'/%3E%3C/g%3E%3C/svg%3E") repeat;
            animation: slidePattern 30s infinite linear;
        }

    @@keyframes slidePattern {
        0%

    {
        transform: translateX(0) translateY(0);
    }

    100% {
        transform: translateX(-40px) translateY(-40px);
    }

    }

    .error-content {
        text-align: center;
        color: white;
        z-index: 2;
        position: relative;
        max-width: 600px;
        padding: 2rem;
    }

    .error-number {
        font-size: 8rem;
        font-weight: 900;
        margin: 0;
        text-shadow: 0 10px 30px rgba(0,0,0,0.3);
        background: linear-gradient(45deg, #ffd93d, #ffbe0b);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: glitch 3s infinite;
    }

    @@keyframes glitch {
        0%, 90%, 100%

    {
        transform: translate(0);
    }

    20% {
        transform: translate(-2px, 2px);
    }

    40% {
        transform: translate(-2px, -2px);
    }

    60% {
        transform: translate(2px, 2px);
    }

    80% {
        transform: translate(2px, -2px);
    }

    }

    .sport-icon {
        font-size: 4rem;
        margin: 1rem 0;
        opacity: 0.8;
        animation: shake 1.5s infinite;
    }

    @@keyframes shake {
        0%, 100%

    {
        transform: translateX(0);
    }

    10%, 30%, 50%, 70%, 90% {
        transform: translateX(-5px);
    }

    20%, 40%, 60%, 80% {
        transform: translateX(5px);
    }

    }

    .error-title {
        font-size: 2.5rem;
        margin: 1rem 0;
        font-weight: 700;
        text-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    .error-message {
        font-size: 1.2rem;
        margin: 1.5rem 0;
        opacity: 0.9;
        line-height: 1.6;
    }

    .request-id {
        background: rgba(0,0,0,0.2);
        padding: 15px;
        border-radius: 10px;
        margin: 1.5rem 0;
        font-family: 'Courier New', monospace;
        font-size: 0.9rem;
        border-left: 4px solid #ffd93d;
        backdrop-filter: blur(10px);
    }

        .request-id strong {
            color: #ffd93d;
        }

    .action-buttons {
        margin-top: 2rem;
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn-primary, .btn-secondary {
        padding: 12px 30px;
        border: none;
        border-radius: 50px;
        font-size: 1rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    .btn-primary {
        background: linear-gradient(45deg, #ffd93d, #ffbe0b);
        color: #333;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.3);
            color: #333;
            text-decoration: none;
        }

    .btn-secondary {
        background: rgba(255,255,255,0.2);
        color: white;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255,255,255,0.3);
    }

        .btn-secondary:hover {
            background: rgba(255,255,255,0.3);
            transform: translateY(-2px);
            color: white;
            text-decoration: none;
        }

    .warning-lights {
        position: absolute;
        top: 20px;
        left: 20px;
        display: flex;
        gap: 10px;
    }

    .warning-light {
        width: 15px;
        height: 15px;
        border-radius: 50%;
        background: #ffd93d;
        animation: blink 1s infinite alternate;
    }

        .warning-light:nth-child(2) {
            animation-delay: 0.3s;
        }

        .warning-light:nth-child(3) {
            animation-delay: 0.6s;
        }

    @@keyframes blink {
        0%

    {
        opacity: 1;
    }

    100% {
        opacity: 0.3;
    }

    }

    .floating-tools {
        position: absolute;
        color: rgba(255,255,255,0.1);
        font-size: 2rem;
        animation: floatTools 20s infinite linear;
    }

    @@keyframes floatTools {
        0%

    {
        transform: translateY(100vh) rotate(0deg);
    }

    100% {
        transform: translateY(-100px) rotate(-360deg);
    }

    }

    .tool-1 {
        left: 15%;
        animation-delay: 0s;
    }

    .tool-2 {
        left: 30%;
        animation-delay: 4s;
        font-size: 1.5rem;
    }

    .tool-3 {
        left: 70%;
        animation-delay: 8s;
    }

    .tool-4 {
        left: 85%;
        animation-delay: 12s;
        font-size: 1.2rem;
    }

    .tool-5 {
        left: 50%;
        animation-delay: 16s;
    }

    @@media (max-width: 768px) {
        .error-number

    {
        font-size: 6rem;
    }

    .error-title {
        font-size: 2rem;
    }

    .error-message {
        font-size: 1rem;
    }

    .action-buttons {
        flex-direction: column;
        align-items: center;
    }

    .btn-primary, .btn-secondary {
        width: 200px;
        justify-content: center;
    }

    .warning-lights {
        display: none;
    }

    }
</style>

<div class="error-container">
    <!-- Warning lights -->
    <div class="warning-lights">
        <div class="warning-light"></div>
        <div class="warning-light"></div>
        <div class="warning-light"></div>
    </div>

    <!-- Floating tool icons -->
    <div class="floating-tools tool-1">🔧</div>
    <div class="floating-tools tool-2">⚙️</div>
    <div class="floating-tools tool-3">🔨</div>
    <div class="floating-tools tool-4">🛠️</div>
    <div class="floating-tools tool-5">⚡</div>

    <div class="error-content">
        <h1 class="error-number">500</h1>
        <div class="sport-icon">🚨</div>
        <h2 class="error-title">Technical Timeout!</h2>
        <p class="error-message">
            Our servers are taking an unexpected break! Our technical team is working hard
            to get everything back in the game. Please try again in a few minutes.
        </p>

        @if (Model.ShowRequestId)
        {
            <div class="request-id">
                <strong>Error Reference:</strong> <code>@Model.RequestId</code>
                <br><small>Share this ID with our support team if the problem continues</small>
            </div>
        }

        <div class="action-buttons">
            <a href="/" class="btn-primary">
                🏠 Return Home
            </a>
            <a href="javascript:location.reload()" class="btn-secondary">
                🔄 Try Again
            </a>
        </div>
    </div>
</div>