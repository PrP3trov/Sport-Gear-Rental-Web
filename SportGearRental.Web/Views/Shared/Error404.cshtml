@{
    Layout = "_Layout";
    ViewData["Title"] = "Page Not Found";
}

<div class="container text-center mt-5">
    <h1 class="display-1 fw-bold text-danger">404</h1>
    <h2 class="mb-4">Oops! This page doesn’t exist.</h2>
    <p class="lead mb-4">You may have mistyped the address or the page may have been moved or deleted.</p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
        ⬅ Back to Home
    </a>
</div>
