@{
    ViewData["Title"] = "Sport Gear Rental - Premium Equipment for Every Adventure";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home-index.css" />
}

@section Scripts {
    <script src="~/js/home-index.js" asp-append-version="true"></script>
}

<div class="hero-section">
    <div class="hero-bg"></div>
    <div class="floating-elements">
        <div class="floating-element"></div>
        <div class="floating-element"></div>
        <div class="floating-element"></div>
    </div>

    <div class="hero-content">
        <h1 class="hero-title">GEAR UP</h1>
        <p class="hero-subtitle">Premium Sport Equipment Rentals for Every Adventure</p>
        <a href="#features" class="cta-button">Explore Equipment</a>
    </div>
</div>

<div class="stats-section">
    <div class="stats-container">
        <div class="stat-item">
            <span class="stat-number">500+</span>
            <span class="stat-label">Premium Gear Items</span>
        </div>
        <div class="stat-item">
            <span class="stat-number">10K+</span>
            <span class="stat-label">Happy Customers</span>
        </div>
        <div class="stat-item">
            <span class="stat-number">50+</span>
            <span class="stat-label">Sport Categories</span>
        </div>
        <div class="stat-item">
            <span class="stat-number">24/7</span>
            <span class="stat-label">Customer Support</span>
        </div>
    </div>
</div>

<div class="features-section" id="features">
    <div class="features-container">
        <h2 class="section-title">Why Choose Us?</h2>
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">🏔️</div>
                <h3 class="feature-title">Premium Quality</h3>
                <p class="feature-description">Top-tier equipment from leading brands, meticulously maintained and regularly updated for peak performance.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">⚡</div>
                <h3 class="feature-title">Instant Booking</h3>
                <p class="feature-description">Book your gear in seconds with our streamlined process. Available 24/7 with flexible pickup and delivery options.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">🛡️</div>
                <h3 class="feature-title">Fully Insured</h3>
                <p class="feature-description">Complete coverage and peace of mind. All equipment comes with comprehensive insurance and damage protection.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">🌟</div>
                <h3 class="feature-title">Expert Support</h3>
                <p class="feature-description">Our team of adventure specialists provides personalized recommendations and technical support for your activities.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">💰</div>
                <h3 class="feature-title">Best Prices</h3>
                <p class="feature-description">Competitive rates with flexible rental periods. Save up to 70% compared to buying new equipment.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">🚚</div>
                <h3 class="feature-title">Free Delivery</h3>
                <p class="feature-description">Complimentary delivery and pickup within 50 miles. Get your gear delivered right to your adventure starting point.</p>
            </div>
        </div>
    </div>
</div>
