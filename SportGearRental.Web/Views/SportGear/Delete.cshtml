@model SportGearRental.ViewModels.SportGear.SportGearDetailsViewModel

@{
    ViewData["Title"] = "Delete Sport Gear";
}

<h2 class="text-center text-danger">Confirm Deletion</h2>
<hr />

<div class="alert alert-warning">
    <p>Are you sure you want to delete the following gear?</p>
</div>

<div class="row">
    <div class="col-md-6">
        <img src="@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Name" />
    </div>
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Price Per Day</dt>
            <dd class="col-sm-8">@Model.PricePerDay.ToString("C")</dd>

            <dt class="col-sm-4">Category</dt>
            <dd class="col-sm-8">@Model.Category</dd>

            <dt class="col-sm-4">Brand</dt>
            <dd class="col-sm-8">@Model.Brand</dd>

            <dt class="col-sm-4">Condition</dt>
            <dd class="col-sm-8">@Model.Condition</dd>
        </dl>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
